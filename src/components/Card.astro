---
export interface Props {
	image: string;
	title: string;
	body: string;
	url: string;
}

const { image, title, body, url } = Astro.props;
---

<div class="projects-card">
	<div class="card-layout">
		<img class="card-image" src={`${image}`}>
		<div class="p-6">
			<h1 class="card-title">{title}</h1>
			<p class="card-body">{body}</p>
			<div class="flex mt-auto">
				<a class="card-github" href={`${url}`}><i class='bx bxl-github'></i> GitHub Repo</a>
			</div>
		</div>
	</div>
</div>

<style>
	.projects-card {
		@apply p-4 md:w-1/3 flex flex-col;
	}

	.card-layout {
		@apply h-full rounded-xl shadow-xl bg-gradient-to-r from-indigo-100 to-blue-100 overflow-hidden hover:shadow-2xl;
	}

	.card-image {
		@apply lg:h-48 md:h-36 w-full object-cover object-center scale-110 transition-all duration-500 hover:scale-100;
	}

	.card-title {
		@apply text-lg font-medium text-gray-600 mb-3;
	}

	.card-body {
		@apply leading-relaxed mb-3;
	}

	.card-github {
		@apply bg-gradient-to-r from-cyan-400 to-blue-400 hover:scale-105 drop-shadow-md shadow-blue-500 px-4 py-3 rounded-lg;
	}
</style>